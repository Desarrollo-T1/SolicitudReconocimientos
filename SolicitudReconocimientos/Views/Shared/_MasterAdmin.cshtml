                        {
                            <li>
                                <a href="~/Firmas/" class="active"><i class="fa  fa-pencil fa-fw"></i> Nueva Firma</a>
                            </li>
                        }
                        @if (FrontUser.TienePermiso(RolesPermisos.vista_supeadministrador))
                        {
                            <li>
                                <a href="~/Usuarios/" class="active"><i class="fa  fa-user fa-fw"></i>Usuarios</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
