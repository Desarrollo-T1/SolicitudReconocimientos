            }
            else if (dia == 5)
            {
                <textarea placeholder="Fecha" class="fecha" name="fecha">O c o y o a c a c,   E s t a d o   d e   M é x i c o; M a y o   2 0 2 0</textarea>
            }
            else if (dia == 6)
