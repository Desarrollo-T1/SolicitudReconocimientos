@model SolicitudReconocimientos.Models.Reconocimientos
@{ 
    var dia= System.DateTime.Today.Month;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>RECONOCIEMIENTO</title>

    <link href="~/Assets1/css/rec.css" rel="stylesheet" />

    
    <script>
        $(document).ready(function () {
            var elem = document.getElementById('para');
            this.value = this.value.toUpperCase();
        });
    </script>
</head>

<body>



    <img class="logo" src="~/Imagenes/umb.PNG" />
    <br>
    <br>
    <br>

    <p class="encabezado ">La Universidad Mexiquense del Bicentenario, otorga el presente </p>
    <p class="reconocimiento ">
        <strong>@Model.TipoDocumento.Nombre.ToUpper()</strong>
        <br>

        @*<textarea placeholder=" Escribir a la/a el" value="" class="el"></textarea>*@
        <input type="text" class="el" value="@Model.Quien.Nombre" />
        <br />
        <strong>
            <span id="para" class="nombre col-md-12">@Model.Nombre.ToUpper() </span>
        </strong>
        @*<strong><input type="text" id="para" class="nombre col-md-6" value="@Model.Nombre.ToUpper()" /></strong>*@

        <br />

        @*<textarea placeholder="Escribir el Nombre" class="nombre" name="nombre"></textarea>
            <br>
            <textarea placeholder="Escribir el Puesto" class="puesto hidden" name="puesto"></textarea>*@
        <textarea placeholder="" value="" class="motivo " name="motivo" rows="4" cols="50">@Model.Motivo</textarea>

    </p>
    <br>
    <br>
    <p class="ul">

        @if (Model.Firma.Nombre == "DR. PABLO BEDOLLA LÓPEZ")
        {
            @Model.Firma.Nombre <br>
        <p style="text-align:center">RECTOR</p>
    }
    else
    {
        if (Model.Firma.Nombre == "FANNY NELIA TERRÓN BOTELLO")
        {
            @Model.Firma.Nombre <br><p style="text-align:center">DIRECTORA DE ADMINISTRACION Y FINANZAS</p>
        }
    }
        @if (Model.Firma.Nombre == "MTRO. JULIO MEJÍA GÓMEZ")
        {

            @Model.Firma.Nombre <br><p style="text-align:center">COORDINADOR DE UNIDADES</p>
        }


        @*@Model.Firma.Nombre <br> RECTOR*@
        </p>
        <br>
        <br>

        <p class="ul">
